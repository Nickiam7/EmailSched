<p id="notice"><%= notice %></p>

<%= month_calendar events: @emails, table: {class: "uk-table table-shadow uk-animation-scale uk-animation-top-center"}, header: {class: "uk-text-center table-month-heading uk-margin-large-top"} do |date, emails| %>
  <%= date.strftime("%-d") %>
  <div class="uk-scrollable-box">
    <ul class="uk-list uk-list-line">
      <% emails.each do |email| %>
        <li>
          <% if user_signed_in? && current_user.admin? %>
              <i class="uk-icon-envelope-o curse" data-uk-tooltip="{pos:'left'}" title="Quantity: <%= email.pre %> <%= email.qty %>"></i> <%= link_to email.name, email %>
            <% else %>
              <i class="uk-icon-envelope-o"></i> <%= link_to email.name, email %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
<br>

