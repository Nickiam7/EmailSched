
<%= render partial: "shared/flash" %>
<p>
	<%= @email.user.firstname %><br>
  <strong>Name:</strong>
  <%= @email.name %>
</p>

<p>
  <strong>Starts at:</strong>
  <%= @email.starts_at.strftime("%x") %>
</p>

<p>
  <strong>Status:</strong>
  <%= @email.email_pending %>

<p>
  <strong>Qty:</strong>
  <%= number_with_delimiter(@email.qty) %>
</p>

<p>
  <strong>Pre:</strong>
  <%= @email.pre %>
</p>

<% if user_signed_in? && current_user.admin? %>
	<%= link_to 'Edit', edit_email_path(@email) %> |
	<%= link_to 'Delete', email_path(@email), method: :delete %>
<% else %>
	<%= link_to 'Back', root_path %> 
<% end %>
<br>

  <%= @email.user.firstname %>: <%= current_user.id if user_signed_in? %>
