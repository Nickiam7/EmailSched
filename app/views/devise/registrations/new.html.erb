<div class="uk-grid uk-height-viewport">
  <div class="uk-width-medium-1-3 uk-push-1-3">
    <div class="uk-text-center">
      <%= image_tag("logo.png", class: "uk-margin-bottom uk-margin-large-top logo") %>
    </div>
    <div class="uk-panel uk-panel-box uk-panel-box-secondary shadow">
<%= form_for(resource, as: resource_name, html: { class: "uk-form" }, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <%= render partial: "shared/devise_flash" %>
  <div class="uk-form-row">
  <div class="uk-grid">
        <div class="uk-width-1-2"><%= f.text_field :firstname, placeholder: "First Name", class: "uk-width-1-1" %></div>
        <div class="uk-width-1-2"><%= f.text_field :lastname, placeholder: "Last Name", class: "uk-width-1-1" %></div>
    </div>
  </div>

  <div class="uk-form-row">
    <div class="uk-button uk-form-select uk-width-1-1" data-uk-form-select>
      <span></span>
      <i class="uk-icon-sort uk-margin-left"></i>
        <%= f.select(:division, options_for_select([["Communications & Marketing", "DoCM"],["Executive Office", "Executive Office"],["Finance & Administration", "Finance & Admin"],["Health Administration Press", "HAP"],["Management Information Services", "MIS"],["Member Services", "Member Services"],["Professional Development", "DoPD"],["Regional Services", "Regional Services"]], selected: f.object.division)) %>
    </div>
  </div>

  <div class="uk-form-row">
    <span data-uk-tooltip="{pos:'right', animation: 'true'}" title="You can use your ache.org email or use a personal one.">
      <%= f.email_field :email, placeholder: "Email", class: "uk-width-1-1" %>
    </span>
  </div>

  <div class="uk-form-row">
    <span data-uk-tooltip="{pos:'right', animation: 'true'}" title="You can use your ache.org password or create a new one.">
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "uk-width-1-1" %>
    </span>
  </div>

  <div class="uk-form-row">
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password", class: "uk-width-1-1"  %>
  </div>

  <div class="uk-form-row">
    <%= f.button "Sign up", name: :commit, value: "Sign Up", class: "uk-button uk-button-primary uk-width-1-1" %>
  </div>
<% end %>
</div>
<span class="uk-text-center">
<%= render "devise/shared/links" %>
</span>
  </div>
</div>