<div class="uk-grid uk-height-viewport">

  <div class="uk-width-medium-1-3 uk-push-1-3">
    <div class="uk-text-center">
      <%= image_tag("logo.png", class: "uk-margin-bottom uk-margin-large-top logo") %>
    </div>
    <div class="uk-panel uk-panel-box uk-panel-box-secondary shadow">
    <%= form_for(resource, as: resource_name, html: { class: 'uk-form' }, url: session_path(resource_name)) do |f| %>
          <%= render partial: "shared/devise_flash" %>
  <div class="uk-form-row">
    <%= f.email_field :email, placeholder: "Email", class: "uk-width-1-1" %>
  </div>

  <div class="uk-form-row">
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password",class: "uk-width-1-1" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="uk-form-row">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="uk-form-row">
    <%= f.button "Log in", class: "uk-button uk-button-primary uk-width-1-1", name: :commit, value: "Log in" %>
  </div>
<% end %>
</div>

<span class="uk-text-center">
<%= render "devise/shared/links" %>
</span>

  </div>
</div>