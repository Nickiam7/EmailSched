<div class="uk-grid uk-margin-large-top uk-height-viewport">
  <div class="uk-width-medium-1-3 uk-push-1-3">
    <div class="logo">
    <div class="uk-text-center">
      <%= image_tag("logo.png", class: "uk-margin-bottom uk-margin-large-top logo") %>
    </div>
    </div>
    <div class="uk-panel uk-panel-box uk-panel-box-secondary shadow">

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "uk-form" }) do |f| %>
        <%= devise_error_messages! %>

        <div class="uk-form-row">
          <%= f.email_field :email, autofocus: true, placeholder: "Enter your email", class: "uk-width-1-1" %>
        </div>

        <div class="uk-form-row">
          <%= f.button "Send me reset password instructions", class: "uk-button uk-button-primary uk-width-1-1", name: :commit, value: "Send me reset password instructions" %>
        </div>

      <% end %>
    </div>
    <%= render "devise/shared/links" %>
  </div>
</div>